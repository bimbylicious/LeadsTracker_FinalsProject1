<Window x:Class="LeadsTracker_FinalsProject1.Camera"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeadsTracker_FinalsProject1"
        mc:Ignorable="d"
        Title="Camera" Height="450" Width="435" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize"
        Closing="Window_Closing">
    <Grid>
        <Image x:Name="cameraImage" Stretch="UniformToFill" Height="250" Width="250" Margin="92,92,93,92" />
        <Button Content="Capture Image" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,380,0,0" Click="CaptureImage_Click" />
    </Grid>
</Window>
