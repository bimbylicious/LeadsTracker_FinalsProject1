        <Button x:Name="Upload_LeadPicture" Content="Upload" HorizontalAlignment="Left" Margin="140,0,0,0" VerticalAlignment="Center" Foreground="White" BorderBrush="White" Width="73" Height="23" Grid.Row="2" Click="Upload_Click" Tag="LeadPicture" FontWeight="Bold">
